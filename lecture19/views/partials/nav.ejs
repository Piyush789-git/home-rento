<!-- Modern Navigation Bar -->
<header class="bg-white border-b shadow-sm sticky top-0 z-50">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between gap-8">
      <!-- Left Section: Logo -->
      <a href="/" class="flex-shrink-0 flex items-center gap-3 hover:opacity-90 transition-opacity">
        <i class="fab fa-airbnb text-3xl text-red-500"></i>
        <span class="text-xl font-bold text-gray-800">airbnb</span>
      </a>

      <!-- Middle Section: Navigation Links -->
      <div class="flex-1 px-10 overflow-x-auto hide-scrollbar">
        <div class="flex items-center justify-center gap-12 min-w-max">
          <% if(isLoggedIn) { %>
            <% if(user && user.userType === 'guest') { %>

            <a href="/homes" class="<%= currentPage === 'Home' ? 'text-red-500 scale-105' : 'text-gray-600 hover:text-red-500' %> flex items-center gap-3 py-2 px-1 transition-all duration-200 hover:scale-105">
              <i class="fas fa-home text-lg"></i>
              <span class="font-medium">Homes</span>
            </a>
            <a href="/bookings" class="<%= currentPage === 'bookings' ? 'text-red-500 scale-105' : 'text-gray-600 hover:text-red-500' %> flex items-center gap-3 py-2 px-1 transition-all duration-200 hover:scale-105">
              <i class="fas fa-calendar-alt text-lg"></i>
              <span class="font-medium">Bookings</span>
            </a>
            <a href="/favourites" class="<%= currentPage === 'favourites' ? 'text-red-500 scale-105' : 'text-gray-600 hover:text-red-500' %> flex items-center gap-3 py-2 px-1 transition-all duration-200 hover:scale-105">
              <i class="fas fa-heart text-lg"></i>
              <span class="font-medium">Favourites</span>
            </a>
            <% } else if(user && user.userType === 'host') { %>
            <a href="/host/host-home-list" class="<%= currentPage === 'host-homes' ? 'text-red-500 scale-105' : 'text-gray-600 hover:text-red-500' %> flex items-center gap-3 py-2 px-1 transition-all duration-200 hover:scale-105">
              <i class="fas fa-list text-lg"></i>
              <span class="font-medium">Host Home</span>
            </a>
            <a href="/host/add-home" class="<%= currentPage === 'AddHome' ? 'text-red-500 scale-105' : 'text-gray-600 hover:text-red-500' %> flex items-center gap-3 py-2 px-1 transition-all duration-200 hover:scale-105">
              <i class="fas fa-plus-circle text-lg"></i>
              <span class="font-medium">Add Home</span>
            </a>
          <% } %>
          <% } %>
        </div>
      </div>

      <!-- Right Section: Auth Buttons -->
      <div class="flex-shrink-0 flex items-center gap-4">
        <% if(!isLoggedIn) { %>
          <a href="/login" class="<%= currentPage === 'login' ? 'bg-red-500 text-white scale-105' : 'text-gray-600 hover:text-red-500' %> px-6 py-2.5 rounded-full transition-all duration-200 flex items-center gap-3 hover:scale-105 font-medium">
            <i class="fas fa-sign-in-alt text-lg"></i>
            <span>Login</span>
          </a>
          <a href="/signup" class="<%= currentPage === 'signup' ? 'text-red-500 scale-105' : 'text-gray-600 hover:text-red-500' %> px-6 py-2.5 rounded-full transition-all duration-200 flex items-center gap-3 hover:scale-105 font-medium">
            <i class="fas fa-user-plus text-lg"></i>
            <span>Sign up</span>
          </a>
        <% } else { %>
          <form action="/logout" method="POST">
            <button type="submit" class="text-gray-600 hover:text-red-500 px-6 py-2.5 rounded-full hover:bg-red-50 transition-all duration-200 flex items-center gap-3 font-medium border border-gray-200 hover:border-red-100">
              <i class="fas fa-sign-out-alt text-lg"></i>
              <span>Logout</span>
            </button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>

<style>
/* Hide scrollbar but keep functionality */
.hide-scrollbar {
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */
}
.hide-scrollbar::-webkit-scrollbar {
  display: none;  /* Chrome, Safari and Opera */
}
</style>
