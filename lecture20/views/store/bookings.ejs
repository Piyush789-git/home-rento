<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-10 px-4">
      <h2 class="text-3xl font-bold text-red-500 mb-8 text-center">My Bookings</h2>
      
      <% if (bookings && bookings.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% bookings.forEach(booking => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <% if (booking.bookingStatus === 'cancelled') { %>
                <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                  <i class="fas fa-home text-gray-400 text-5xl"></i>
                </div>
              <% } else { %>
                <img src="<%= booking.home.photo %>" alt="<%= booking.home.houseName %>" class="w-full h-48 object-cover">
              <% } %>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-2">
                  <% if (booking.bookingStatus === 'cancelled') { %>
                    <span class="text-gray-500">Property No Longer Available</span>
                  <% } else { %>
                    <%= booking.home.houseName %>
                  <% } %>
                </h3>
                <% if (booking.bookingStatus !== 'cancelled') { %>
                  <p class="text-gray-600 mb-2">
                    <i class="fas fa-map-marker-alt mr-2"></i>
                    <%= booking.home.location %>
                  </p>
                <% } %>
                
                <div class="border-t border-gray-200 pt-4 mt-4">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-600">Check-in:</span>
                    <span class="font-medium"><%= booking.checkIn.toLocaleDateString() %></span>
                  </div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-600">Check-out:</span>
                    <span class="font-medium"><%= booking.checkOut.toLocaleDateString() %></span>
                  </div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-600">Guests:</span>
                    <span class="font-medium"><%= booking.numberOfGuests %></span>
                  </div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-600">Total Price:</span>
                    <span class="font-medium text-green-600">‚Çπ<%= booking.totalPrice %></span>
                  </div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-600">Payment Method:</span>
                    <span class="font-medium capitalize"><%= booking.paymentMethod.replace('_', ' ') %></span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-600">Status:</span>
                    <span class="px-3 py-1 rounded-full text-sm font-medium
                      <%= booking.bookingStatus === 'confirmed' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= booking.bookingStatus.charAt(0).toUpperCase() + booking.bookingStatus.slice(1) %>
                    </span>
                  </div>
                  <% if (booking.bookingStatus === 'cancelled' && booking.cancellationReason) { %>
                    <div class="mt-4 p-3 bg-red-50 rounded-md">
                      <p class="text-red-700 text-sm">
                        <i class="fas fa-info-circle mr-2"></i>
                        <%= booking.cancellationReason %>
                      </p>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">üè†</div>
          <p class="text-2xl text-gray-600 mb-8">No bookings found</p>
          <a href="/homes" class="inline-block bg-red-500 text-white px-6 py-3 rounded-md hover:bg-red-600 transition duration-300">
            Browse Homes
          </a>
        </div>
      <% } %>
    </main>
  </body>
</html>