<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-20 text-center px-4">
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
        <div class="text-red-500 mb-6">
          <i class="fas fa-times-circle text-6xl"></i>
        </div>
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Payment Failed</h2>
        <p class="text-gray-600 mb-8">We couldn't process your payment. Please try again or choose a different payment method.</p>
        <div class="border-t border-gray-200 pt-6">
          <div class="flex justify-between items-center mb-4">
            <span class="text-gray-600">Error Message:</span>
            <span class="font-medium text-red-500"><%= error %></span>
          </div>
        </div>
        <div class="flex gap-4 mt-8">
          <a href="javascript:history.back()" class="flex-1 bg-red-500 text-white py-3 px-6 rounded-md hover:bg-red-600 transition duration-300 flex items-center justify-center gap-2">
            <i class="fas fa-redo"></i>
            Try Again
          </a>
          <a href="/homes" class="flex-1 bg-gray-100 text-gray-700 py-3 px-6 rounded-md hover:bg-gray-200 transition duration-300 flex items-center justify-center gap-2">
            <i class="fas fa-home"></i>
            Browse Homes
          </a>
        </div>
      </div>
    </main>
  </body>
</html> 