<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8">
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
        <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Sign Up</h1>
        <form action="/signup" method="POST" class="space-y-6">
          
          <%- include('../partials/error') %>

          <div class="grid grid-cols-2 gap-4">
            <div class="mb-4">
              <label for="firstName" class="block text-gray-700 mb-2">First Name</label>
              <div class="relative">
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                  required
                  class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                  placeholder="ðŸ‘¤ Enter your first name"
                />
              </div>
            </div>
            <div class="mb-4">
              <label for="lastName" class="block text-gray-700 mb-2">Last Name</label>
              <div class="relative">
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                  required
                  class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                  placeholder="ðŸ‘¤ Enter your last name"
                />
              </div>
            </div>
          </div>
          
          <div class="mb-4">
            <label for="email" class="block text-gray-700 mb-2">Email</label>
            <div class="relative">
              <input
                type="email"
                id="email"
                name="email"
                value="<%= oldInput.email ? oldInput.email : '' %>"
                required
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                placeholder="âœ‰ï¸ Enter your email"
              />
            </div>
          </div>

          <div class="mb-4">
            <label for="password" class="block text-gray-700 mb-2">Password</label>
                          <div class="relative">
              <input
                type="password"
                id="password"
                name="password"
                required
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                placeholder="ðŸ”’ Enter your password"
              />
            </div>
          </div>

          <div class="mb-6">
            <label for="confirmPassword" class="block text-gray-700 mb-2">Confirm Password</label>
                          <div class="relative">
              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                required
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                placeholder="ðŸ”’ Confirm your password"
              />
            </div>
          </div>

          <div class="mb-6">
            <label class="block text-gray-700 mb-2">Account Type</label>
            <div class="flex space-x-4">
              <div class="flex items-center">
                <input
                  type="radio"
                  id="guest"
                  name="userType"
                  value="guest"
                  checked="<%= oldInput.userType === 'guest' ? 'true' : 'false' %>" 
                  required
                  class="w-4 h-4 text-red-500 border-gray-300 focus:ring-red-500"
                />
                <label for="guest" class="ml-2 text-gray-700">Guest</label>
              </div>
              <div class="flex items-center">
                <input
                  type="radio"
                  id="host"
                  name="userType"
                  value="host"
                  checked="<%= oldInput.userType === 'host' ? 'true' : 'false' %>" 
                  required
                  class="w-4 h-4 text-red-500 border-gray-300 focus:ring-red-500"
                />
                <label for="host" class="ml-2 text-gray-700">Host</label>
              </div>
            </div>
          </div>

          <div class="mb-6">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input
                  type="checkbox"
                  id="terms"
                  name="terms"
                  <%= oldInput.terms === 'on' ? 'checked' : '' %>
                  required
                  class="w-4 h-4 text-red-500 border-gray-300 rounded focus:ring-red-500"
                />
              </div>
              <div class="ml-3 text-sm">
                <label for="terms" class="text-gray-700">
                  I agree to the 
                  <a href="/terms" class="text-red-500 hover:text-red-600 underline">Terms and Conditions</a>
                  and
                  <a href="/privacy" class="text-red-500 hover:text-red-600 underline">Privacy Policy</a>
                </label>
              </div>
            </div>
          </div>

          <button
            type="submit"
            class="w-full bg-red-500 text-white py-3 px-4 rounded-md hover:bg-red-600 transition duration-300 mt-4"
          >
            Sign Up
          </button>

          <p class="text-center text-gray-600 mt-4">
            Already have an account? 
            <a href="/login" class="text-red-500 hover:text-red-600">Login here</a>
          </p>
        </form>
      </div>
    </main>
  </body>
</html>